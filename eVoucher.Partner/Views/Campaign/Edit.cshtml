@model eVoucher_ViewModel.Requests.CampaignRequests.CampaignEditRequest
@{
    ViewData["title"] = "Edit campaign";

}

<div class="card-header bg-info">
    <h3 class="text-center font-weight-light my-4">Edit campaign</h3>
</div>
<div class="card-body bg-success">
    
    <form asp-action="Edit" method="post" asp-controller="Campaign" enctype="multipart/form-data">
        <div class="row container-fluid my-3">
            <div class="col col-lg-3 my-3">
                <img class="align-content-center" src="@ViewBag.campaignvm.ImagePath" width="360" height="250" />
            </div>
            <div class="col col-lg-9 ">
                <div class="row mb-3 container-fluid">
                    <div class="col col-lg-5">
                        <div class="form-floating mt-3 mb-md-0">
                            <input class="form-control" asp-for="Name" type="text" value="@ViewBag.campaignvm.Name" required />
                            <input class="form-control" asp-for="Id" type="number" value="@ViewBag.campaignvm.Id" hidden />
                            <label>Name</label>
                        </div>
                    </div>
                    <div class="col col-lg-7 ">
                        <div class="form-floating mt-3 mb-md-0">
                            <input class="form-control" asp-for="Slogan" type="text" value="@ViewBag.campaignvm.Slogan" required />
                            <label>Slogan</label>
                        </div>
                    </div>
                </div>
                <div class="row mb-3 container-fluid">
                    <div class="col col-lg-5 ">
                        <div class="form-floating ">
                            <input class="form-control" asp-for="MetaKeyword" type="text" required value="@ViewBag.campaignvm.MetaKeyword" />
                            <label>Meta keyword</label>
                        </div>
                    </div>
                    <div class="col col-lg-7 ">
                        <div class="form-floating ">
                            <input class="form-control" asp-for="MetaDescription" type="text" required value="@ViewBag.campaignvm.MetaDescription" />
                            <label>Meta description</label>
                        </div>
                    </div>
                </div>
                <div class="row mb-3 container-fluid">
                    <div class="col col-lg-6 ">
                        <label class="form-check-label text-white">Choose games for campaign</label>
                        <fieldset class="form-check form-check-inline">
                            @for (int i = 0; i < ViewBag.games.Count; i++)
                            {
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" asp-for="Games[i].IsSelected" type="checkbox" checked="@ViewBag.GameChecked[i]" />
                                    <input class="form-check-input" asp-for="Games[i].Id" type="number" value="@ViewBag.games[i].Id" hidden />
                                    <label class="form-check-label text-white">@ViewBag.games[i].Name</label>
                                </div>
                            }
                        </fieldset>
                    </div>
                    <div class="col col-lg-6 ">
                        <label class="form-check-label text-white">Check flag for campaign show priority</label>
                        <fieldset class="form-check form-check-inline ">
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" asp-for="HomeFlag" type="checkbox" checked="@ViewBag.campaignvm.HomeFlag" />
                                <label class="form-check-label text-white">Home Flag</label>
                            </div>
                            <div class="form-check mb-1 form-check-inline">
                                <input class="form-check-input" asp-for="HotFlag" type="checkbox" checked="@ViewBag.campaignvm.HotFlag" />
                                <label class="form-check-label text-white">Hot Flag</label>
                            </div>
                        </fieldset>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mb-3 ">
            <div class="col-md-4">
                <div class="form-floating mb-3 mb-md-0">
                    <input class="form-control" asp-for="BeginningDate" type="datetime-local" required value="@ViewBag.BeginDatestr" />
                    <label for="BeginningDate">Begin date</label>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-floating mb-3 mb-md-0">
                    <input class="form-control" asp-for="EndingDate" type="datetime-local" required value="@ViewBag.EndDatestr" p />
                    <label>End date</label>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-floating mb-3 mb-md-0">
                    <input class="form-control" asp-for="ImageFile" type="file" />
                </div>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-5">
                <div class="form-floating mb-3 mb-md-0">
                    <input class="form-control" asp-for="UpdatedBy" type="text" hidden="true" value="@User.Identity.Name" />
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-floating mb-3 mb-md-0">
                    <input class="form-control" asp-for="UpdatedTime" type="datetime"
                           value="@DateTime.Now" hidden="true" />
                </div>
            </div>

        </div>
        <div class="mt-4 mb-0">
            <div class="d-grid"><button class="btn btn-warning btn-block" type="submit">Update</button></div>
        </div>
    </form>
    <p>@ViewData["result"]</p>
</div>


