@using eVoucher_ViewModel.Requests.CampaignRequests;
@using eVoucher_ViewModel.Response;
@model PageResult<CampaignVM>
@{
    ViewData["Title"] = "Ended Campaigns";
}


<div class="row container-fluid my-2 text-start">
    <a class="btn btn-warning btn-lg">Ended Campaigns:</a>
</div>
<div class="row mb-3">
    @foreach (var item in Model.Items)
    {
        <div class="col-md-4">
            <div class="card">
                <img class="card-img-top" src="@item.ImagePath" width="320" height="260">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">@item.Slogan</p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Begin date: @item.BeginningDate.ToShortDateString() -> End date: @item.EndingDate.ToShortDateString()</li>
                    <li class="list-group-item">@item.MetaDescription</li>

                </ul>
                <div class="card-body">
                    @Html.ActionLink("View detail", "CampaignDetail", new { id = item.Id }) |
                    @Html.ActionLink("View vouchertype", "Index","VoucherType", new { id = item.Id }) |
                    @Html.ActionLink("Edit Campaign", "Edit", new { id = item.Id })
                </div>
            </div>
        </div>
    }

</div>
@await Component.InvokeAsync("Pager", Model)
<div class="row container-fluid my-2 align-content-end">
    <a class="btn btn-primary btn-lg" asp-controller="Home" asp-action="Index">Go to Dashboard</a>
</div>

