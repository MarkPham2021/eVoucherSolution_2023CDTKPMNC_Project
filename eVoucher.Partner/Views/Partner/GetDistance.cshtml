@model eVoucher_ViewModel.Requests.Common.GetGoogleDistanceMatrixRequest
@{
    ViewData["title"] = "Get Distance";
}
<div class="card-header bg-info">
    <h3 class="text-center font-weight-light my-4">GetDistance</h3>
</div>
<div class="card-body bg-success">
    <form asp-action="GetDistance" method="get" >
        <div class="row mb-3">
            <div class="col-md-5">
                <div class="form-floating mb-3 mb-md-0">
                    <input class="form-control" asp-for="destinations" type="text" required />
                    <label>destinations</label>
                </div>
            </div>
            <div class="col-md-7">
                <div class="form-floating mb-3 mb-md-0">
                    <input class="form-control" asp-for="origins" type="text" required />
                    <label>Address</label>
                </div>
            </div>
        </div>        
        <div class="mt-4 mb-0">
            <div class="d-grid"><button class="btn btn-info btn-block" type="submit">Get Distance</button></div>
        </div>
    </form>
    Status: <p>@ViewData["result"]</p>
</div>