@model eVoucher_DTO.Models.Customer
@{
    ViewData["Title"] = "Customer Detail";
}
<div class="container-fluid">

    <div class="container-fluid">
        <div class="bg-primary bg-opacity-75">
            <h3 class="text-md-start my-2 ps-5 text-warning fw-bold">Information of @Model.Name</h3>
        </div>
        <!--Staff detail-->
        <div class="row">

            <div class="col col-lg-5 col-md-6 col-sm-12 my-3 border border-2">
                <div class="card-header bg-info fw-bold border-1 rounded-1">Full name: @Model.Name</div>
                <div class="card-body bg-white rounded-1 mb-1">
                    <p>Gender: @Model.Gender</p>
                    <p>Date of birth: @Model.DOB.ToShortDateString()</p>
                    <p>UserName: @Model.AppUsers.UserName</p>
                    <p>PhoneNumber: @Model.AppUsers.PhoneNumber</p>
                    <p>Email: @Model.AppUsers.Email</p>
                    <p>Address: @Model.Address</p>
                    <p>CreatedTime: @Model.CreatedTime.ToShortDateString()</p>
                    <p>Account status: @Model.Status</p>
                </div>
            </div>
        </div>
        <p>
            @Html.ActionLink("Activate", "Activate", new { id = Model.Id },new {@class ="text-white fw-bold bg-primary "}) |
            @Html.ActionLink("Lock", "Lock", new { id = Model.Id },new {@class ="text-white fw-bold bg-danger"} )
        </p>
        <div class="col col-lg-5 col-md-6 col-sm-12 my-3 border border-2">
            <a class="form-control bg-primary text-white fw-semibold " asp-action="Index" asp-controller="Customer">Back to Our customers</a>
        </div>
    </div>
</div>




