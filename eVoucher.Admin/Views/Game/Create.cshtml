@model eVoucher_ViewModel.Requests.GameRequests.GameCreateRequest
@{
    ViewData["Title"] = "Create new game";
}
<div class="card-header">
    <h3 class="text-center font-weight-light my-4">Create new game</h3>
</div>
<div class="card-body">
    <form asp-action="Create" enctype="multipart/form-data" method="post">
        <div class="row mb-3">
            <div class="col-md-12">
                <div class="form-floating mb-3 mb-md-0">
                    <input class="form-control" asp-for="Name" type="text" placeholder="Enter game name" />
                    <label asp-for="Name" class="control-label">Name</label>
                    <input class="form-control" asp-for="CreatedBy" type="text" value="@User.Identity.Name" hidden />
                </div>
                
            </div>
        </div>
        <div class="mt-4 mb-0">
            <div class="d-grid">
                <input class="btn btn-primary btn-block" type="submit" value="Create game" />
            </div>
        </div>
    </form>
    <p>status : @ViewData["result"] </p>
</div>


